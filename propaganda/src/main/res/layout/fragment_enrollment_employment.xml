<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <ListView android:id="@+id/employment_list" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:divider="#AAC9D6"
        android:dividerHeight="1dp" android:padding="5dp" />
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/employment_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:src="@drawable/news_fake" />
</LinearLayout>