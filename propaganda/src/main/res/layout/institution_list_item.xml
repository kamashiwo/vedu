<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:background="#FFFFFF" android:paddingLeft="10dp"
        android:paddingRight="10dp" android:paddingTop="15dp"
        android:paddingBottom="15dp">
        <TextView android:id="@+id/institution_text"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:background="#FFFFFF" />
        <ImageView android:id="@+id/institution_image"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_alignParentRight="true" android:src="@drawable/arrow_close"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>